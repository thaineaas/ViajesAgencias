@model Viajes.ViewModel.ContactoViewModel

@{
    ViewData["Title"] = "Contacto";
}

<style>
    body {
        background-image: url('https://media.admagazine.com/photos/63d82e10cd9e8ef56a15da3c/16:9/w_2560%2Cc_limit/codigo-al-viajar.jpg');
        background-size: cover;
        background-position: center;
    }

    .form-container {
        background-color: rgba(126, 125, 177, 0.9);
        padding: 20px; 
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(18, 22, 104, 0.2);
        width: 100%;
        max-width: 680px;
        position: relative; 
    }
</style>
<br></br>
<div class="container d-flex justify-content-center align-items-center">
    <div class="form-container">
        <h1 class="text-center mb-6">Formulario de contacto</h1>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-controller="Contacto" asp-action="Enviar" method="post">
                    <div class="form-group">
                        <label asp-for="FormContacto.Name" class="control-label">Nombre</label>
                        <input asp-for="FormContacto.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FormContacto.Email" class="control-label">Correo elecotronico</label>
                        <input asp-for="FormContacto.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FormContacto.Message" class="control-label">Mensaje</label>
                        <textarea asp-for="FormContacto.Message" class="form-control"></textarea>
                    </div>
                    <br>                                
                    <div class="form-group text-center">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Enviar mensaje</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>