@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenvie la confirmación de su correo";
}

<h1 style="display: flex; justify-content: center;">@ViewData["Title"]</h1>
<h2 style="display: flex; justify-content: center;">Ingrese su correo</h2>
<hr />
<div class="row" style="display: flex; justify-content: center;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Correo electronico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
